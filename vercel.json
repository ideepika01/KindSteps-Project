{
    "version": 2,
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/auth/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/reports/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/admin/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/health",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}