{
    "_redeploy": "v2",
    "version": 2,
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "cleanUrls": true,
    "routes": [
        {
            "src": "/(auth|reports|admin|health|docs|openapi.json)(/.*)?",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/about(.html)?",
            "dest": "/frontend/pages/about.html"
        },
        {
            "src": "/contact(.html)?",
            "dest": "/frontend/pages/contact.html"
        },
        {
            "src": "/(works|how-it-works)(.html)?",
            "dest": "/frontend/pages/works.html"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}