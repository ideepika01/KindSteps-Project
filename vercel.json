{
    "version": 2,
    "cleanUrls": true,
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/(auth|reports|admin|health|docs|openapi.json)(/.*)?",
            "destination": "/backend/app/main.py"
        },
        {
            "source": "/about",
            "destination": "/frontend/pages/about.html"
        },
        {
            "source": "/contact",
            "destination": "/frontend/pages/contact.html"
        },
        {
            "source": "/works",
            "destination": "/frontend/pages/works.html"
        },
        {
            "source": "/how-it-works",
            "destination": "/frontend/pages/works.html"
        },
        {
            "source": "/",
            "destination": "/frontend/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}