{
    "version": 2,
    "cleanUrls": true,
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(auth|reports|admin|health|docs|openapi.json)(/.*)?",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/about",
            "dest": "/pages/about"
        },
        {
            "src": "/contact",
            "dest": "/pages/contact"
        },
        {
            "src": "/works",
            "dest": "/pages/works"
        },
        {
            "src": "/how-it-works",
            "dest": "/pages/works"
        },
        {
            "src": "/",
            "dest": "/index"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}